{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "angular-standalone": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "sass"
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": "dist/angular-standalone",
                        "index": "src/index.html",
                        "browser": "src/main.ts",
                        "polyfills": ["zone.js"],
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "sass",
                        "assets": ["src/favicon.ico", "src/assets"],
                        "styles": ["node_modules/bootstrap/dist/css/bootstrap.css", "src/styles.sass"],
                        "scripts": ["node_modules/bootstrap/dist/js/bootstrap.js"]
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kb",
                                    "maximumError": "1mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kb",
                                    "maximumError": "4kb"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "buildTarget": "angular-standalone:build:production"
                        },
                        "development": {
                            "buildTarget": "angular-standalone:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "angular-standalone:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "tsConfig": "tsconfig.spec.json",
                        "inlineStyleLanguage": "sass",
                        "assets": ["src/favicon.ico", "src/assets"],
                        "styles": ["src/styles.sass"],
                        "scripts": []
                    }
                }
            }
        },
        "giis": {
            "projectType": "library",
            "root": "projects/giis",
            "sourceRoot": "projects/giis/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/giis/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/giis/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/giis/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/giis/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                }
            }
        },
        "root": {
            "projectType": "library",
            "root": "projects/root",
            "sourceRoot": "projects/root/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/root/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/root/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/root/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/root/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                },
                "storybook": {
                    "builder": "@storybook/angular:start-storybook",
                    "options": {
                        "configDir": "projects/root/.storybook",
                        "browserTarget": "root:build",
                        "compodoc": true,
                        "compodocArgs": ["-e", "json", "-d", "projects/root"],
                        "port": 6006
                    }
                },
                "build-storybook": {
                    "builder": "@storybook/angular:build-storybook",
                    "options": {
                        "configDir": "projects/root/.storybook",
                        "browserTarget": "root:build",
                        "compodoc": true,
                        "compodocArgs": ["-e", "json", "-d", "projects/root"],
                        "outputDir": "dist/storybook/root"
                    }
                }
            }
        }
    }
}
